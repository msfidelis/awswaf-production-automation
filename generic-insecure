resource "aws_wafregional_rule" "generic_insecuire_rules" {
  name        = "${var.waf_name}-generic-insecure-rules"
  metric_name = "GenericInsecurureParams"

  predicate {
    data_id = "${aws_wafregional_byte_match_set.insecure_params.id}"
    negated = false
    type    = "ByteMatch"
  }
}